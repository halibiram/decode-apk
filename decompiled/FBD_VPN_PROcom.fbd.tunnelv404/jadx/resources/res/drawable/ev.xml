<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#ff302b2b"
                android:endColor="#fff80707"
                android:angle="0"/>
            <stroke
                android:width="1dp"
                android:color="#01264e80"/>
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="20dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="3dp"
                android:bottom="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"/>
    </item>
    <item android:top="0dp">
        <shape>
            <gradient
                android:startColor="@color/colorBG"
                android:endColor="@color/colorBG"
                android:angle="0"/>
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="20dp"/>
        </shape>
    </item>
</layer-list>
