<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardBackgroundColor="@color/background_color"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:background="@color/background_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fullscreen_dialog_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_net"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                app:tint="@color/colorText"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tweaks Generator"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/fullscreen_dialog_close"/>
            <View
                android:theme="@style/AppTheme.SelectNetwork"
                android:textColor="@color/colorText"
                android:id="@+id/close_generator_dialog"
                android:background="@android:drawable/ic_delete"
                android:padding="8dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="SAVE"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/colorText"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="URL/Host"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"
                android:id="@+id/url_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="m.beeg.com"
                android:ems="10"
                android:inputType="textUri"/>
            <TextView
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Split Mode"/>
            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/split_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:weightSum="3">
                <RadioButton
                    android:textColor="@color/colorText"
                    android:id="@+id/split_instant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instant"
                    android:layout_weight="1"
                    app:buttonTint="@color/colorAccent"/>
                <RadioButton
                    android:textColor="@color/colorText"
                    android:id="@+id/split_delay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delay"
                    android:layout_weight="1"
                    app:buttonTint="@color/colorAccent"/>
                <RadioButton
                    android:textColor="@color/colorText"
                    android:id="@+id/split_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:layout_weight="1"
                    app:buttonTint="@color/colorAccent"/>
            </RadioGroup>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:weightSum="2">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request Method"/>
                    <Spinner
                        android:id="@+id/request_method"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Injection Method"/>
                    <Spinner
                        android:id="@+id/inject_method"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Query Mode"/>
            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/query_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <RadioButton
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:layout_weight="1"
                    app:buttonTint="@color/colorAccent"/>
                <RadioButton
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Front Query"
                    android:layout_weight="1"
                    app:buttonTint="@color/colorAccent"/>
                <RadioButton
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back Query"
                    android:layout_weight="1"
                    app:buttonTint="@color/colorAccent"/>
            </RadioGroup>
            <TextView
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra Headers"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:weightSum="2">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <CheckBox
                        android:textColor="@color/colorText"
                        android:id="@+id/online_host"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Online-Host"
                        app:buttonTint="@color/colorAccent"/>
                    <CheckBox
                        android:textColor="@color/colorText"
                        android:id="@+id/reverse_proxy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Reverse-Proxy"
                        app:buttonTint="@color/colorAccent"/>
                    <CheckBox
                        android:textColor="@color/colorText"
                        android:id="@+id/paygen_proxy_auth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Proxy-Authorization"
                        app:buttonTint="@color/colorAccent"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <CheckBox
                        android:textColor="@color/colorText"
                        android:id="@+id/forward_host"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Forward-Host"
                        app:buttonTint="@color/colorAccent"/>
                    <CheckBox
                        android:textColor="@color/colorText"
                        android:id="@+id/keep_alive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Keep-Alive"
                        app:buttonTint="@color/colorAccent"/>
                    <CheckBox
                        android:textColor="@color/colorText"
                        android:id="@+id/dual_connect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Dual-Connect"
                        app:buttonTint="@color/colorAccent"/>
                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:textColor="@color/white"
                    android:id="@+id/generate_payload"
                    android:background="@color/colorAccent"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="GENERATE"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>
