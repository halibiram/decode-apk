<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/tweak_icon"
                        android:background="@drawable/circle_bg_account"
                        android:padding="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/app_name"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/ic_launcher"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_light"
                        android:gravity="center_vertical"
                        android:id="@+id/tweak_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UdpResolver"
                        android:lines="1"
                        android:textAllCaps="true"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <ScrollView
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:hint="UdpResolver"
                            app:hintTextColor="@color/colorAccent">
                            <com.google.android.material.textfield.TextInputEditText
                                android:enabled="true"
                                android:textColor="@color/colorText"
                                android:id="@+id/custom_udpresolver"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_alignParentStart="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>
                </ScrollView>
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:textColor="@color/colorText"
                            android:layout_gravity="center"
                            android:id="@+id/exit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exit"
                            android:letterSpacing="0.1"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:padding="10dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:id="@+id/custok_server_save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="@string/update11"
                            android:layout_marginStart="30dp"
                            style="@style/PositiveButtonStyle"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </RelativeLayout>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
