<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home"
    android:background="@color/colorBG"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/app_name"
            android:layoutDirection="ltr"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/app_name"
            android:fontFamily="@font/urw_bold"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/input_bg"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:elevation="10dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/dd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="7dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/user_login"
                    android:tint="@color/colorPrimary"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textColorHint="#c2185b"
                    android:id="@+id/login_username"
                    android:background="#00000000"
                    android:padding="10dp"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Username"
                    android:inputType="textEmailAddress"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <FrameLayout
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/dd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/login_pass"
                        android:tint="@color/colorPrimary"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textColorHint="#c2185b"
                        android:id="@+id/login_password"
                        android:background="#00000000"
                        android:padding="10dp"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Password"
                        android:inputType="textEmailAddress"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <androidx.appcompat.widget.AppCompatButton
                        android:textSize="15sp"
                        android:textColor="#ffffff"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/login"
                        android:background="@drawable/round_button_primary"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Login"
                        android:layout_weight="1.1"
                        android:textAllCaps="false"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="1dp"
                        android:elevation="3dp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </RelativeLayout>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/appversion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 2.1"
            android:textAlignment="center"/>
        <View
            android:background="@drawable/round_button_accent"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</RelativeLayout>
