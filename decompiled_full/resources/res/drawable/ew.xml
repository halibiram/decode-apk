<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#ff3c3539"
                android:endColor="#fff80707"
                android:angle="0"/>
            <stroke
                android:width="0dp"
                android:color="#01264e80"/>
            <corners android:radius="8dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"/>
    </item>
    <item android:top="0dp">
        <shape>
            <gradient
                android:startColor="@color/colorBG"
                android:endColor="@color/colorBG"
                android:angle="270"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>
